<div class="row justify-content-center">
  <div class="col-5">
    <table class="table border text-center">
      <thead>
        <tr>
          <th>名前</th><th>飼いやすさ</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= category.name %></td><td><%= category.difficulty %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-7 justify-content-center text-center">
    <%= image_tag category.get_category_image, size: "300x300", style: "object-fit: contain;" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>紹介</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= category.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="row col-12">
    <div class="col-12">
      <table class="table w-100">
        <thead>
          <tr>
            <th class="table-active" style="padding: 10px;">写真</th>
            <th class="table-active" style="padding: 10px;">お名前</th>
            <th class="table-active" style="padding: 10px;">年齢</th>
            <th class="table-active" style="padding: 10px;">性別</th>
            <th class="table-active" style="padding: 10px;">飼い主</th>
          </tr>
        </thead>
         <% @category_pets.each do |pet| %>
        <tbody>
            <tr>
              <td style="padding: 10px;"><%= image_tag(pet.image.present? ? pet.image : 'no_image.jpg', size: '100x100') %></td>
              <td style="padding: 10px;">
                <%= link_to pet_path(pet.id), style: 'color: black; text-decoration: underline;' do %>
                  <%= pet.name %>
                <% end %>
              </td>
              <td style="padding: 10px;"><%= pet.age %>歳</td>
              <td style="padding: 10px;"><%= pet.gender %></td>
              <td style="padding: 10px;"><%= pet.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>