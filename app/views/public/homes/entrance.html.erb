<div class="container">
  <div class="row mb-5 justify-content-center text-center border" style="background-color: #FFF8E8; border-radius: 50px;">
    <div class="col">
      <div class="today"><!--今週いいね数が多かったペットを掲載-->
      <%= image_tag @recentry.image, size: '700x700', style: "object-fit: contain;"  %>
      </div>
    </div>
    <div class="col border justify-content-center text-center"style="background-color: #DAD3BE; border-radius: 50px;">
      <h4 class="row mt-3 mb-5 justify-content-center text-center" id="link">最新の投稿</h4><!--@weekpetでintroductionを持ってくる-->
      <%= link_to album_path(@recentry) do %>
      <h2 class="border border-warning p-4" style="border-radius: 60px; background-color: #C1E2A4;"><%= @recentry.title %></h2>
      <% end %>
      <div class="col">
        <table class="table">
          <thead>
            <tr><th>名前</th></tr>
          </thead>
          <tbody>
            <tr></tr><td><%= @recentry.pet.name %></td></tr>
          </tbody>
          <tr><th>性別</th></tr>
          <tr><td><%= @recentry.pet.gender_i18n %></td></tr>
          <tr><td><h4><%= @recentry.view_counts.count.zero? ? 0 : @recentry.view_counts.count %>人が閲覧したよ！</h4></td></tr>
        </table>
      </div>
    </div>
  </div>
  
</div>