<div class="container">
  <div class="row mb-5 justify-content-center text-center border" style="background-color: #F7F9F2; border-radius: 50px;">
    <div class="col">
      <h4 class="border my-4 p-2 shadow-image" style="background-color: #E2BBE9; border-radius: 50px;">PetShareの現在の投稿数<%=  @album_all.count.zero? ? 0 :  @album_all.count %>枚</h4>
      <div class="today"><!--今週いいね数が多かったペットを掲載-->
      <%= image_tag @recentry.image, size: '700x700', style: "object-fit: contain;"  %>
      </div>
    </div>
    <div class="col border justify-content-center text-center shadow-image"style="background-color: #DAD3BE; border-radius: 50px;">
      <h4 class="row mt-3 mb-5 justify-content-center text-center" id="link">最新の投稿</h4><!--@weekpetでintroductionを持ってくる-->
      <%= link_to album_path(@recentry) do %>
      <h2 class="border border-warning p-4" style="border-radius: 60px; background-color: #C1E2A4;"><%= @recentry.title %></h2>
      <% end %>
      <div class="col">
        <table class="table">
          <thead>
            <tr><th>名前</th></tr>
          </thead>
          <tbody>
            <tr></tr><td><%= @recentry.pet.name %></td></tr>
          </tbody>
          <tr><th>性別</th></tr>
          <tr><td><%= @recentry.pet.gender_i18n %></td></tr>
          <tr><td><h4 class="border p-2" style="background-color: #EECAD5; border-radius: 50px;"><%= @recentry.view_counts.count.zero? ? 0 : @recentry.view_counts.count %>人が閲覧したよ！</h4></td></tr>
          <tr><td><h4 class="border p-2" style="background-color: #EECAD5; border-radius: 50px;"><%= @recentry.favorites.count.zero? ? 0 : @recentry.view_counts.count %>人がいいねしたよ！</h4></td></tr>
        </table>
      </div>
    </div>
  </div>
  <div class="row col-12 mb-5 border">
    <h3 class="col-12 text-center">最近コメントされた投稿はこちら</h3>
    <% @new_comments.each do |comment| %>
    <div class="card m-3">
      <div class="card-img-top"><%= image_tag comment.album.image, size: "100x100",style: "object-fit: contain;" %></div>
      <div class="card-body">
        <div class="row border text-center mx-auto"><%= comment.body.truncate(10) %></div>
        <div class="row mx-auto"><%= comment.created_at.strftime("%Y/%m/%d") %></div>
        <div class="row mx-auto"><%= link_to user_path(comment.user) do %><%= comment.user.name %><% end %></div>
      </div>
    </div>
    <% end %>
  </div>
</div>