<div class="container">
  <div class="row mb-5">
    お気に入りしたペット一覧
  </div>
  <div class="row">
    <% @favorites.each do |favorite| %>
    <div class ="card col-2 mb-3 mr-3">
      <%= link_to pet_path(favorite.pet.id) do %>
      <div class="card-img-top">
        <%= image_tag favorite.pet.image, size: "100x100", style: "object-fit: contain;" %>
      </div>
        <div class="card-title">
          <%= favorite.pet.name %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>