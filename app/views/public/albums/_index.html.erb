  <table class="table border table-hover mb-5">
    <tbody>
      <% comments.each do |comment| %>
       <tr><td>
        <div class="row m-auto">
          <%= link_to user_path(comment.user.id) do %>
          <div class="col"><%= image_tag comment.user.get_profile_image, size: "50x50" %></div>
          <% end %>
          <div class="col-2 mr-3"><strong><%= comment.user.name %></strong><br><%= comment.created_at.strftime("%Y/%m/%d") %><br>感情分析[<%= comment.score %>]点</div>
          <div class="col-8 text-left"><%= comment.body %></div>
          <div class="col">
            <% if comment.user == current_user %>
             <%= link_to "削除",album_comment_path(@album, comment), method: :delete,remote: true, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        </div>
        </td></tr>
      <% end %>
      <h5><%= paginate comments,theme: 'bootstrap-5' %></h5>
    </tbody>
  </table>