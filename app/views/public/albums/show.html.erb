<div class="container">
  <div class="row">
    <div class="col">
      <!--画像の表示領域、その下に投稿者ほか-->
      <div class="container border text-center" style="background-color: white;">
        <div class="row border">
          <%= image_tag @album.get_album_image, size: '700x700', style: "object-fit: contain;" %>
        </div>
          <div class="row">
          <div class="col-12 text-center">
            <% if @previous_album %>
              <%= link_to '前の写真', album_path(@previous_album), class: 'btn btn-secondary float-start' %>
            <% end %>
            <% if @next_album %>
              <%= link_to '次の写真', album_path(@next_album), class: 'btn btn-secondary float-end' %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col border">
            <h2><%= @album.title %></h2>
          </div>
          <!--いいね（お気に入り）-->
          <div class="col border">
            <div class="corder"style="background-color: #;"><%= @album.view_counts.count.zero? ? 0 : @album.view_counts.count %>人が閲覧済</div>
            <h4 id="favorite_buttons_<%= @album.id %>">
              <%= render "public/favorites/favorite_btn", album: @album %>
            </h4>
          </div>
        </div>
        <div class="row border">
          <% @album_tags.each do |tag| %>
          <div class="m-3 badge badge-pill border" style="background-color: #FF7EE2;">
            <%= link_to tag_path(tag) do %>
            <%= tag.name %><% end %>
          </div>
          <% end %>
        </div>
        <div class="row border">
          <%= @album.body %>
        </div>
        <div class="row m-3">
          <div class="col-2">
              <%= image_tag @album.user.get_profile_image, size: "50x50" %>
            </div>
          <div class="col-2"><%= link_to user_path(@album.user.id) do %>
          <%= @album.user.name %></div>
          <% end %>
          <div class="col-8">
            <% if @album.user == current_user %>
              <%= link_to "この投稿を編集する",edit_album_path(@album), class: "btn btn-warning" %>
              <%= link_to "この投稿を削除する", album_path(@album), method: :delete,data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!--画像の隣のスペース、ペットの写真一覧４枚まで-->
      <div class="col border">
      <div class="container text-center">
        <h4><%= link_to pet_path(@album.pet) do %>
          <%= @album.pet.name %>
        <% end %>の他の写真</h4>
        
        <div id="pet-photo-slideshow" class="mb-3">
          <% @album.pet.album.where.not(id: @album.id).limit(3).each do |pet_album| %>
            <%= link_to image_tag(pet_album.get_album_image, class: "slideshow-image", size: "300x300", style: "object-fit: contain;"), album_path(pet_album) %>
          <% end %>
        </div>
    
        <div id="load-more" class="text-center">
          <button id="load-more-button" class="btn btn-primary">もっと見る</button>
        </div>
      </div>
    </div>


    <!--これより下がコメント欄-->
    <div class="row col-12" id="comments-index">
      <%= render "form", album: @album %>
      <%= render "index", comments: @comments %>
    </div>
     
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    let offset = 3; // 最初に表示するアルバムの数
    const petId = <%= @album.pet.id %>;
    const slideshow = document.getElementById("pet-photo-slideshow");
    
    function loadMoreAlbums() {
      fetch(`/pets/${petId}/albums?offset=${offset}`)
        .then(response => response.json())
        .then(data => {
          // 新しいアルバムを追加
          data.albums.forEach(album => {
            const newImage = document.createElement("a");
            newImage.href = `/albums/${album.id}`;
            newImage.innerHTML = `<img src="${album.image_url}" class="slideshow-image" style="width: 300px; height: 300px; object-fit: contain;">`;
            slideshow.appendChild(newImage);
          });

          // アルバムの数を更新
          offset += data.albums.length;

          // 追加のアルバムがない場合はボタンを非表示にする
          if (data.albums.length === 0) {
            document.getElementById("load-more").style.display = "none";
          }
        })
        .catch(error => console.error('Error:', error));
    }

    // スクロールイベントをリッスン
    window.addEventListener("scroll", function() {
      if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
        loadMoreAlbums();
      }
    });
  });
</script>

