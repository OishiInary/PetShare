<div class="container">
  <div class="row">
    <div class="col">
      <div class="container">
        <div class="row">
          <%= image_tag @album.image, size: '500x500' %>
        </div>
        <div class="row">
          <div class="col">
            <h2><%= @album.title %></h2>
          </div>
          <div class="col">
            <h4 id="favorite_buttons_<%= @album.id %>">
              <%= render "public/favorites/favorite_btn", album: @album %>
            </h4>
          </div>
        </div>
        <div class="row m-3">
          <%= @album.body %>
        </div>
        <div class="row m-3">
          <%= link_to user_path(@album.user.id) do %>
          <%= @album.user.name %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="container">
        <div class="row">
          <%= link_to pet_path(@album.pet.id) do %>
          <%= @album.pet.name %>
          <% end %>の写真一覧
        </div>
        <div class="row col-6 bg bg-color-blue">
          <% @albums.each do |album| %>
          <div class="col m-2">
            <%= link_to album_path(album) do %>
              <%= image_tag album.image, size: "100x100" %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <h2>コメント</h2>
      <table class="table">
        <tbody>
      <% @album.comments.each do |comment| %>
       <tr><td>
        <div class="row m-3">
          <div class="col-2 mr-3"><strong><%= comment.user.name %></strong></div>
          <div class="col-9 text-left"><%= comment.body %></div>
        </div>
        </td></tr>
      <% end %>
      </tbody>
      </table>
      <%= form_with model: [ @album, @album.comments.build ] do |form| %>
      <%= form.hidden_field :user_id, :value => current_user.id %>
        <div class="row m-3">
          <div><%= form.label :コメント %></div>
          <div><%= form.text_area :body ,size: "100x5" %></div>
        </div>
        <div class="row"><%= form.submit "送信する" %></div>
      <% end %>
    </div>
  </div>
</div>
