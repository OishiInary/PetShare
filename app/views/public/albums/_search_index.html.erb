<div class="container">
  <div class="row">
    全ての投稿
  </div>
  <div class="row">
    <% albums.each do |album| %>
    <div class ="col-2 mb-3">
      <%= link_to album_path(album.id) do %>
      <div class="row">
        <%= image_tag album.image, size: '100x100' %>
      </div>
      <div class="row">
        <%= album.title %>
      </div>
      <div class="row">
        <%= album.created_at.strftime("%Y/%m/%d") %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div> 