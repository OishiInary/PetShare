<% if album.favorited_by?(current_user) %>
  <%= button_to album_favorites_path(album),method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= album.favorites.count %> いいね
  <% end %>
<% else %>
  <%= button_to album_favorites_path(album),data: { "turbo-method": :post }  do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= album.favorites.count %> いいね
  <% end %>
<% end %>