<div class="container">
  <div class="row">
    <div class="container col-3">
      <%= render "public/homes/sidebar" %>
    </div>
    <div class="container col-9">
      <div class="row m-2">
        <div class="col-9">
          <h2><%= @user.name %>さんのページ</h2>
          <div class="row m-4">
            <% if @user.image.attached? %>
              <%= image_tag @user.image, size: "300x300" %>
            <% else %>
              <%= image_tag 'no_image', size: "300x300" %>
            <% end %>
          </div>
        </div>
        <div class="col">
        <table class='table'>
            <tbody>
              <tr><td><h4>SAVE活動</h4></td></tr>
              <tr><td><h5><%= @user.hope_i18n %></h5></td></tr>
              <tr><td><%= current_user.gender_i18n %>-<%= @age %>歳</td></tr>
              <tr><td>フォロー数: <%= @user.followings.count %></td></tr>
              <tr><td>フォロワー数: <%= @user.followers.count %></td></tr>
              <tr><td><%= render "public/relationships/btn", user: @user, options: { class: "follow_link"} %></td></tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row col-12 m-2">
        <h3 class="text-center">メニュー</h3>
      </div>
      <div class="row m-2">
        <div class="col m-2 border ">
          <%= link_to "アルバム管理", albums_path %>
          <p>投稿したアルバムを<br>管理できます</p>
        </div>
        <div class="col m-2  border ">
          <%= link_to "マイぺット管理", pets_path %>
          <p>登録したペットを<br>管理できます</p>
        </div>
        <div class="col m-2 border ">
          <%= link_to "参加グループ", groups_path %>
          <p>参加済グループの<br>一覧です</p>
        </div>
      </div>
      <div class="row m-2">
        <div class="col m-2 border">
          <%= link_to "お気に入り投稿", albums_path %>
          <p>お気に入り投稿の<br>一覧です</p>
        </div>
        <div class="col m-2 border">
          <%= link_to "お気に入りペット", pets_path %>
          <p>お気に入りペットの<br>一覧です</p>
        </div>
        <div class="col m-2 border">
          <%= link_to "フォロー＆フォロワー", groups_path %>
          <p>フォロー関係者の<br>一覧です</p>
        </div>
      </div>
    </div>
  </div>
</div>