<div class="container">
  <div class="col-9">
    <div class="row">
      <h3>飼い主一覧</h3>
    </div>
    <div class="row">
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <tr>
              <td>
              <p>画像</p>
                <% if user.image.attached? %>
                  <%= image_tag user.image, size: "50x50" %>
                <% else %>
                  <%= image_tag 'no_image', size: "50x50" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= render "public/relationships/btn", user: user, options: { class: "follow_link"} %></td>
              <td><%= link_to '見に行く', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>