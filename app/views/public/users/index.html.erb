<div class="container">
  <div class="col-9">
    <div class="row">
      <h3>飼い主一覧</h3>
    </div>
    <div class="row">
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= render "relationships/btn", user: user, options: { class: "follow_link"} %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-3">
    <div class="row">
      <p>最新のコメント</p>
    </div>
    <div class="row"><!--@calbamuは最近コメントされたアルバム達-->
      <%= render "commented", calbums: @calbums %>
    </div>
  </div>
</div>