<%= javascript_pack_tag 'preview', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <div class="row">
    <%= form_with model: @category do |f| %>
    <table>
    <div id="new-image"></div>
    <tr><th>画像</th>
    <td> <%= f.file_field :image, accept: "image/*", class: "form-control border-0" %> </td></tr>
    <tr>
    <th>名前</th>
    <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
    <th>紹介文</th>
    <td><%= f.text_area :introduction, class: "form-control" %></td>
    </tr>
    <tr>
    <th>飼いやすさ</th>
    <td><%= f.select :difficulty, ["1","2","3","4","5"], { selected: "3" } %></td>
    </tr>
    <tr><td><%= f.submit "新規登録", class:'btn btn-info' %></td></tr>
    </table>
    <% end %>
  </div>
</div>