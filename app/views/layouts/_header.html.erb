<div class="container col-12">
  <div class="row justify-content-center text-center">
    <div class="col-12 mt-4 mb-1">
      <div class="row bg-primary-subtle text-emphasis-primary justify-content-center" style="border-radius: 10px;">
        <% if admin_signed_in? %>
         <div class="col border border-4 text-center"  ><%= link_to '管理者トップ', admin_root_path, class: 'text-decoration-none hover-effect mx-3'%></div>
         <div class="col border border-4 text-center"  ><%= link_to '会員一覧', admin_users_path, class: 'text-decoration-none hover-effect mx-3' %></div>
         <div class="col border border-4 text-center"  ><%= link_to '投稿一覧', admin_albums_path, class: 'text-decoration-none hover-effect mx-3' %></div>
         <div class="col border border-4 text-center"  ><%= link_to 'グループ一覧', admin_groups_path, class: 'text-decoration-none hover-effect mx-3' %></div>
         <div class="col border border-4 text-center"  ><%= link_to 'タグ一覧未実装', class: 'text-decoration-none hover-effect mx-3' %></div>
         <div class="col border border-4 text-center"  ><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'text-decoration-none hover-effect mx-3' %></div>
        <% else %>
          <div class="col border border-4 text-center shadow-image"  style= "border-radius: 60px; background-color: #A2C579; ">
           <%= link_to entrance_path do %><br><%= image_tag "/icon_cat.png", size: "50x50" %><p class="img-overlay">トップ</p><% end %>
          </div>
          <div class="col border border-4 text-center shadow-image text-center pt-4" style= "border-radius: 60px; background-color: #A2C579; ">
             <%= link_to about_path do %><%= image_tag "/icon_inu.png", size: "50x50" %><br><p>アバウト</p><% end %>
          </div>
          <div class="col border border-4 text-center shadow-image text-center pt-4" style="text-align: center; border-radius: 60px; background-color: #A2C579; ">
            <%= link_to mypage_path do %><%= image_tag "/icon_house.png", size: "50x50" %><p>マイページ</p><% end %>
          </div>
          
          <div class="col border border-4 text-center shadow-image align-middle pt-4" style= "border-radius: 60px;background-color: #A2C579; ">
           <%= link_to albums_path do %><%= image_tag "/icon_camera.png", size: "50x40" %><p>みんなの<br>写真</p><% end %>
          </div>
          <div class="col border border-4 text-center shadow-image pt-3" style= "border-radius: 60px; background-color: #A2C579; ">
           <%= link_to pets_path do %><%= image_tag "/icon_juel.png", size: "50x50" %><p>みんなの<br>ペット</p><% end %>
          </div>
          <div class="col border border-4 text-center shadow-image pt-4"style= "border-radius: 60px; background-color: #A2C579; " >
           <%= link_to groups_path do %><%= image_tag "/icon_group.png", size: "50x50" %><p>グループ</p><% end %>
          </div>
          <div class="col border border-4 text-center shadow-image pt-3" style= "border-radius: 60px; background-color: #A2C579; " >
           <%= link_to categories_path do %><%= image_tag "/icon_gorilla.png", size: "50x50" %><p>カテゴリー<br>検索</p><% end %>
          </div>
          <div class="col border border-4 text-center pt-4 shadow-image" style= "border-radius: 60px; background-color: #A2C579; " >
           <%= link_to save_path do %><%= image_tag "/icon_save2.png",size: "50x50" %><p>SAVE</p><% end %>
          </div>
          <div class="col border border-4 shadow-image text-center justify-content-center pt-4" style= "border-radius: 10px; background-color: #A2C579; " >
            <% if user_signed_in? %>
            <div class="row justify-content-center ">
              <%= link_to destroy_user_session_path, method: :delete do %><%= image_tag "/icon_door.png",size: "50x50" %><p>ログアウト</p><% end %></div>
            <% else %>
              <div class="row justify-content-center text-center mb-2 "><%= link_to '会員登録', new_user_registration_path %></div>
              <div class="row justify-content-center text-center mb-2 "><%= link_to 'ログイン', new_user_session_path %></div>
              <div class="row justify-content-center text-center mb-2 "><%= link_to "ゲストログイン", user_guest_sign_in_path, class: "sign-in", method: :post %></div>
            <%  end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-3 mb-3 border text-center justify-content-center " style="background-color: #5F6F52; border-radius: 20px;"><%= render "public/searches/form" %></div>
  <div class=" row">
    <h4 id="notice mt-5 mb-5 text-center"><%= notice %></h4>
  </div>
</div>