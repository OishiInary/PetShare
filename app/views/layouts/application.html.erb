<!DOCTYPE html>
<html>
  <head>
    <title>PetShare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/2918437a6a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'cat', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-colum vh-100">
    <div class="container">
      <div class="row">
        <div class="col-11">
          <%= render 'layouts/header' %>
          <main class="mb-auto">
          <%= yield %>
          </main>
        </div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
